<li id="comment-<%= comment.id %>">
	<span class="content">
		<%= comment.content %>
	</span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(comment.created_at) %> ago.
		<% if current_user?(comment.user) %>
        <%= link_to "delete", comment_path(comment), method: :delete,
                                        data: { confirm: "You sure?" } %>
    <% end %>
    <div class="row">
      <div class="col">
        <% if @comments_likes.pluck(:likeable_id).include?(comment.id) %>
            <%= render "users/unlike_comment_form", comment: comment %>
        <% else %>
            <%= render "users/like_comment_form", comment: comment %>
        <% end %>
      </div>
      <div class="col">Comment</div>
    </div>
	</span>
</li>