<% provide(:title, 'Sign up') %>
<div class="container">
  <h1>Sign up</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3" style="margin: auto;">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, class: "font-weight-bolder" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email, class: "font-weight-bolder" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: "font-weight-bolder" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation", class: "font-weight-bolder" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
