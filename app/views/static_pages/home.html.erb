<section class="background">
  <div class="form_search">
    <div id="frame">
      <%= form_tag search_tours_path, method: :get do %>
        <%= text_field_tag :name, params[:name], placeholder: "Name of Tour" %>
        <%= select_tag :sort_by_price, options_for_select([['Increase of price','ASC'],['Decrease of price','DESC']]), class: "dropdown" %>
        <%= select_tag :category_id, options_for_select(@categories.map{|category| ["#{category.name}","#{category.id}"]}) %>
        <%= button_tag(type: "submit", class: "btn btn-light", id: "btn-search") do %>
          <i class="fa fa-search"> Search </i>
        <% end %>
      <%end%>
    </div>
  </div>  
</section>
