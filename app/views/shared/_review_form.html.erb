<h6>Please leave your review below</h6>
<%= form_for([tour,review]) do |f| %>
  <%= render 'shared/error_messages', object: review %>
  <%= hidden_field_tag :tour_id, @review.tour_id %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new review..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
      <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
  </span>
<% end %>
