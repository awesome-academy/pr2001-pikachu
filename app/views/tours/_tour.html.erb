<div class="col-sm-4">
  <div class="card" id="card<%= tour.id %>" style="width: 350px">
    <div style="overflow: hidden; width: 350px">
      <%= image_tag(tour.images.sample&.link_url.to_s, alt: 'hi', class:"img-thumbnail", id: "image#{tour.id}") %>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= link_to "#{tour.name}", category_tour_path(tour.category,tour) %></h4>
      <% if tour.ratings.count > 0%>
        <p class="card-text">Rate Average: <%= (tour.ratings.sum{|x| x.rate})/(tour.ratings.count).to_f %></p>
      <% end %>
      <p class="card-text">Price: <%= tour.price %>$</p>
      <p class="card-text">Coupon: <%= tour.coupon %>%</p>
      <%= link_to "See More", category_tour_path(tour.category,tour), class:'btn btn-success'%>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $("#card<%= tour.id %>").hover(function(){
      $("#image<%= tour.id %>").toggleClass("zoom");
  });
  });
</script>
