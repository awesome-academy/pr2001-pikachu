<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <div class="container">
      <h2><%= @category.name %></h2>
      <%= button_to 'Export CSV', export_csv_tours_path %>
      <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price($)</th>
            <th>Coupon(%)</th>
            <th>Seats</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
          <tbody>
            <%= render @tours %>    
          </tbody>
      </table>
      <%= will_paginate %>
      </div>
      <%= link_to 'Create a new Tour', new_admin_category_tour_path(@category) %> | 
      <%= link_to 'Back', admin_categories_path %>
    </div>
  </div>
</div>
