<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <div class="container">
      <div id="category_messages">
        <h1>All Categories</h1>
        <table class="table table-hover" id="categories">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
        <%= link_to 'Create a new Category', new_admin_category_path, class: "btn btn-success" %>
      </div>

      <h4 style="margin-top: 30px;">New Category</h4>
      <%= form_for [:admin, @category], remote: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.submit "Confirm", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
